.jsSkills
	display block
	size(auto, 193px)
	&__heading
		padding-top 59px
	&__pointer
		position relative
		transition-duration .3s
		transition-timing-function ease-out
		transition-property width
		&:after
			position absolute
			z-index 3
			size(17px, 14px)
			top 26px
			right 4px
			display block
			background-image url(../images/arrow.png)
			content ''
		&_no
			width 16px

		&_use
			width 163px

		&_edit
			width 388px

		&_write
			width 780px
	&__scale
		position relative
		size(770px, 30px)
		
		margin-top 42px
		margin-left 1px
		background url(../images/js-scale.png) no-repeat center center
	&__labels
		position relative
		margin-top 2px
		margin-left 1px
		
		display block
		font-family baseFont
		font-weight 700
		font-size 13px
		color #2f1b15
		&_radio
			display none
		
	&__label
		padding 0
		padding-top 70px
		margin-top -33px
		position absolute
		top 0
		left 0
		display block
		width 170px
		font-size 13px
		line-height 18px
		cursor pointer
		color #2e1a15
		&:before
			content ''
			background-image none
			size(0)
		.inputRadio__item:checked + &:after
			position absolute
			top 0
			left 0
			content ''
		&_no
			top -2px
			left -1px
		&_use
			top -4px
			left 144px
		&_edit
			top -4px
			left 371px
		&_write
			top 3px
			left 630px

