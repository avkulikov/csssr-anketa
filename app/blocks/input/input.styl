.inputText
	display flex
	justify-content space-between
	&__label
		align-self flex-end
		margin-top 15px
		margin-right 15px
		font-family baseFont
		font-size 22.43px
		font-weight 700
		color #2f1b15
	&__item
		flex-grow 1
		 input
			margin-top -16px
			padding-left 15px
			font-family 'Courier New'
			font-size 30px
			font-weight 400
			text-align left
			color  #231f20
			background url(../images/line.png) repeat-x bottom left
			border none
		&-short
			size(629px, 52px)
		&-middle
			size(618px, 52px)
		&-long
			size(579px, 52px)
		&-vlong
			size(698px, 52px)

.inputCheck
	display flex
	size(auto, 34.9px)
	&__label
		position relative
		padding-left 25px
		font-family baseFont
		font-size 21.1px
		font-weight 700
		cursor pointer
		color  #000
		&:before
			position absolute
			top 3px
			left 0
			content ''
			background-image url(../images/box.png)
			size(20px)
		.inputCheck__item:checked + &:after
			position absolute
			top -5px
			left 4px
			content url(../images/check.png)
		&_2row
			size(288px, auto)
			line-height 25px
	a
		padding-left 3px
		font-family 'PT Sans', sans-serif
		font-size 21px
		cursor pointer
		color #1f5f97
	&__item
		display none

.inputTextarea
	&__item
		 textarea
			size(769px, auto)
			font-family 'Courier New'
			font-size 30px
			overflow hidden
			background-image url('../images/multiline.png')
			background-color transparent
			background-position left  top
			border none
			resize none
			&[placeholder]
				line-height 58px
				padding-top 8px
				padding-left 3px
			&:focus
				outline none

.inputRadio
	&__label
		padding-left 34px
		padding-right 16px
		position relative
		font-family baseFont
		font-size 20px
		font-weight 700
		cursor pointer
		color  #000
		&:before
			position absolute
			top -8px
			left -8px
			content url(../images/circle.png)
			size(35px)
		.inputRadio__item:checked + &:after
			position absolute
			top 4px
			left 1px
			content url(../images/point.png)

	&__item
		display none