include ../heading/heading
include ../text/text
include ../input/input

mixin plans()
	+b.plans&attributes(attributes)
		+e.headings
			+heading('Какие у вас планы на будущее?')
		+e.descriptions
			+text('Этот ответ ни на что не повлияет. Не беда, если в будущем ваши планы поменяются.')
		+e.checkbox
			+input({
				type: 'radio',
				name: 'radioPlans',
				checked: 'checked',
				title: 'Верстать'
			})
			+input({
				type: 'radio',
				name: 'radioPlans',
				title: 'Прокачиваться в JS'
			})
			+input({
				type: 'radio',
				name: 'radioPlans',
				title: 'Менеджерство'
			})
			+input({
				type: 'radio',
				name: 'radioPlans',
				title: 'Другое'
			})